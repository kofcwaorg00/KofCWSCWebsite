@model KofCWSCWebsite.Models.TblWebTrxAoi

@{
    ViewData["Title"] = "Create";
}
@{
    var Types = new List<SelectListItem>
    {
    new SelectListItem
    {
        Value = "OI",
        Text="Of Interest"
    },
    new SelectListItem
        {
            Value = "AN",
            Text = "Announcements"
        }
    };
}

<h1>Create</h1>

<h4>New Annoucement or Of Interest Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @*<input asp-for="Type" class="form-control" title="(AN)nouncement or (OI)of interest" />*@
                <select asp-for="Type" class="form-control" asp-items="@Types"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GraphicUrl" class="control-label"></label>
                <input asp-for="GraphicUrl" class="form-control" />
                <span asp-validation-for="GraphicUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkUrl" class="control-label"></label>
                <input asp-for="LinkUrl" class="form-control" />
                <span asp-validation-for="LinkUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostedDate" class="control-label"></label>
                <input asp-for="PostedDate" class="form-control" type="date" value='@DateTime.Now.ToString("yyyy-MM-dd")' />
                <span asp-validation-for="PostedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expired" class="control-label"></label>
                <input asp-for="Expired" class="form-control" value="false" />
                <span asp-validation-for="Expired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
