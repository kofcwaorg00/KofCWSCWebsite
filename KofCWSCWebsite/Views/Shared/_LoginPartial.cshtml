@using Microsoft.AspNetCore.Identity
@using KofCWSCWebsite.Areas.Identity.Data
@inject SignInManager<KofCUser> SignInManager
@inject UserManager<KofCUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        KofCUser user = await UserManager.GetUserAsync(User);
        var fullName = $"{user.FirstName} {user.LastName}";

        <li class="nav-item">
            @* nav-link and dropdown-toggle classes give me the little down arrow sprite *@
            <a class="nav-link dropdown-toggle text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account">Hello @fullName!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }

</ul>
