@using Microsoft.AspNetCore.Identity
@using KofCWSCWebsite.Areas.Identity.Data
@inject SignInManager<KofCUser> SignInManager
@inject UserManager<KofCUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    KofCUser user = await UserManager.GetUserAsync(User);
    var fullName = $"{user.FirstName} {user.LastName}";
    <div class="grid-item">
        <ul class="navbar-nav">
            <li class="nav-item">
                @*nav-link and dropdown-toggle classes give me the little down arrow sprite*@
                @*<div class="grid-item" style="padding-top:25px">*@
                <a class="nav-link dropdown-toggle text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account">Hello @fullName!</a>
                @*</div>*@
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                @*<div class="grid-item" style="padding-top:25px">*@
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
                @*</div>*@
            </li>
        </ul>
    </div>

}
else
{
    <div class="grid-item">
        <ul class="navbar-nav">
            <li class="nav-item">
                @*<div class="grid-item" style="padding-top:25px">*@
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                @*</div>*@
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                @*<div class="grid-item" style="padding-top:25px">*@
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                @*</div>*@
            </li>
        </ul>
    </div>
}
