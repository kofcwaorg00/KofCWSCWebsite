                <span asp-validation-for="DioceseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chartered" class="control-label"></label>
                @*<input asp-for="Chartered" class="form-control" type="date" value="@(Model.Chartered.HasValue ? Model.Chartered.Value.ToString("yyyy-MM-dd") : string.Empty)" />*@
                <input asp-for="Chartered" class="form-control" type="date" />
                <span asp-validation-for="Chartered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WebSiteUrl" class="control-label"></label>
                <input asp-for="WebSiteUrl" class="form-control" />
                <span asp-validation-for="WebSiteUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BulletinUrl" class="control-label"></label>
                <input asp-for="BulletinUrl" class="form-control" />
                <span asp-validation-for="BulletinUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arbalance" class="control-label"></label>
                <input asp-for="Arbalance" class="form-control" />
                <span asp-validation-for="Arbalance" class="text-danger"></span>
