@model KofCWSCWebsite.Models.CvnControl

@{
    ViewData["Title"] = "Edit";
}

<h1>Update Convention Information</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input hidden="hidden" asp-for="Address" />
            <input hidden="hidden" asp-for="City" />
            <input hidden="hidden" asp-for="State" />
            <input hidden="hidden" asp-for="ZipCode" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LocationString" class="control-label"></label>
                <input asp-for="LocationString" class="form-control" />
                <span asp-validation-for="LocationString" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control" asp-items="ViewBag.ListOfLocations"></select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <hr />
            <h6>Mileage and Per Diem Amounts</h6>
            <div class="form-group">
                <label asp-for="MPDDay" class="control-label"></label>
                <input asp-for="MPDDay" class="form-control" />
                <span asp-validation-for="MPDDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="MPDMile" class="control-label"></label>
                    <input asp-for="MPDMile" class="form-control" />
                    <span asp-validation-for="MPDMile" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <h6>Accounting Information</h6>
            <div class="form-group">
                <label asp-for="CheckAccount" class="control-label"></label>
                <input asp-for="CheckAccount" class="form-control" />
                <span asp-validation-for="CheckAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
