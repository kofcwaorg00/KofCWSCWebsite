<script>
    $('#summernote').summernote({
        height: 800,
        toolbar: [
            ['style', ['bold', 'italic', 'underline']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']], // table button
            ['insert', ['link', 'picture']], // insert link & image buttons
            ['view', ['codeview']]
        ]
    });
    // Ensure Summernote updates the textarea before submit
    $('form').on('submit', function () {
        $('#summernote').val($('#summernote').summernote('code'));
    });
    $('#discard-link').on('click', function (e) {
        e.preventDefault();
        if (confirm('Discard all changes and reload the page?')) {
            location.reload();
        }
    });
</script>
