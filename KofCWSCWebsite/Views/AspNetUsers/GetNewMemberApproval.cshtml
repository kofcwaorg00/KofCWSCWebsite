@model KofCWSCWebsite.Models.AspNetUser

@{
    ViewData["Title"] = "NewMemberApproval";
}

<h1>New Member Approval</h1>

<h4>A New Member has registered in our website that does not exist in our database. Please review and approve or reject.</h4>

<h4>If you APPROVE the data below will be added to our database.</h4>
<hr />

<div class="row">
    <div class="col-md-4" style="width:100%">

        <form asp-action="NewMemberApproval">
            <div class="parent" style="display:grid;grid-template-columns:1fr 1fr 1fr;padding:20px">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="KofCmemberId" class="control-label"></label>
                    <input asp-for="KofCmemberId" class="form-control" />
                    <span asp-validation-for="KofCmemberId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="State" class="control-label"></label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Wife" class="control-label"></label>
                    <input asp-for="Wife" class="form-control" />
                    <span asp-validation-for="Wife" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Council" class="control-label"></label>
                    <input asp-for="Council" class="form-control" />
                    <span asp-validation-for="Council" class="text-danger"></span>
                </div>
            </div>
            <div class="parent" style="display:grid;grid-template-columns:1fr 1fr ;padding:20px">
                @*<div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="MemberVerified" /> @Html.DisplayNameFor(model => model.MemberVerified)
                        </label>
                    </div>*@
                <div class="form-group">
                    @*<label asp-for="MembershipCardUrl" class="control-label"></label>
                        <input asp-for="MembershipCardUrl" class="form-control" />
                        <span asp-validation-for="MembershipCardUrl" class="text-danger"></span>*@
                    <a href="@Model.MembershipCardUrl" target="_blank">
                        <img src="@Model.MembershipCardUrl" width="200" />
                    </a>
                </div>
            </div>
            <div class="parent" style="display:grid;grid-template-columns:1fr 1fr ;padding:20px;width:19%">
                <div class="form-group">
                    <a asp-action="ApproveNewMember" asp-route-id="@Model.Id" class="btn btn-success" style="width:100px;">Approve</a>
                </div>
                <div>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#reasonModal">
                        Reject
                    </button>

                </div>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
<!-- Reason Modal -->
<div class="modal fade" id="reasonModal" tabindex="-1" aria-labelledby="reasonModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="RejectNewMember" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="reasonModalLabel">Rejection Reason</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="mb-3">
                        <label for="Reason" class="form-label">Reason</label>
                        <textarea name="Reason" id="Reason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Submit Rejection</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
