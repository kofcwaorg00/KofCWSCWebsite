@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <label asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control" />
                    <label asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.KofCMemberID" class="form-control" disabled />
                    <label asp-for="Input.KofCMemberID"></label>
                    <span asp-validation-for="Input.KofCMemberID" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.Address" class="form-label"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Wife" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.Wife" class="form-label"></label>
                    <span asp-validation-for="Input.Wife" class="text-danger"></span>
                </div>
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem;">
                <div class="form-floating mb-3">
                    <input asp-for="Input.City" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.City" class="form-label"></label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.State" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.State" class="form-label"></label>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PostalCode" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.PostalCode" class="form-label"></label>
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <select id="ICouncil" asp-for="Input.Council" asp-items="Model.Councils" class="form-select">
                    <option value="0">Select a Council</option>
                </select>
                <label class="required" asp-for="Input.Council">Council</label>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ProfilePicture" class="form-label"></label>
                <input asp-for="Input.ProfilePicture" class="form-control" type="file" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <div style="font-size:small">
                Profile Picture Specifications:<br />
                File must be less than 2MB<br />
                Only JPG, JPEG and PNG files are allowed<br />
                Picture must be at least 200x200 pixels<br />
                Picture resolution must be at least 72 DPI
            </div>

            @if (!string.IsNullOrEmpty(Model.CurrentUser?.ProfilePictureUrl))
            {
                <img src="@Model.CurrentUser.ProfilePictureUrl" class="img-thumbnail" width="120" />
            }



            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
