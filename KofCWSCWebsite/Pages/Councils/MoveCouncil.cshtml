@page
@model MoveCouncilModel
<h2>Moving Members from One Council to Another</h2>
<p>NOTE: when the "Post" checkmark is checked, this process will move all members associated with the "From Council" to the "To Council"</p>
<div style="display: inline-block;">
    <form method="post">
        <div class="form-group">
            <label for="FromCouncil">From Council</label>
            <select asp-for="FromCouncil" asp-items="Model.CouncilOptions" class="form-control" style="width: auto;"></select>
        </div>

        <div class="form-group">
            <label for="ToCouncil">To Council</label>
            <select asp-for="ToCouncil" asp-items="Model.CouncilOptions" class="form-control" style="width: auto;"></select>
        </div>

        <div class="form-check">
            <input asp-for="Post" class="form-check-input" />
            <label asp-for="Post" class="form-check-label">Post</label>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Move Council</button>
            <a href="/" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
    

    @if (!string.IsNullOrEmpty(Model.ResultMessage))
    {
        <div class="alert alert-success mt-3">
            @Model.ResultMessage
        </div>
    }
</div>
